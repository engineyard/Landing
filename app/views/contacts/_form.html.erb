<div class='well' >
	
	<%= form_for(@contact , url: '/prom/contacts') do |f| %>
	  <% if @contact.errors.any? %>
		<div class='alert-message error'>
	      
	      <% @contact.errors.full_messages.each do |msg| %>
	        <%= msg %><br/>
	      <% end %>
	  
		</div>
	    
	  <% end %>
	
	<fieldset>
	
	<legend>Contact Information </legend>

	  <div class='clearfix'>
	    <%= f.label :email %>
		<div class='input'>
	    	<%= f.text_field :email , :autofocus => true %>
		</div>
	  </div>
	   <div class='clearfix'>
	    <%= f.label :phone %>
			<div class='input'>
	    	<%= f.text_field :phone  %>
		</div>
	  </div>
	  <div class='hide'>
	    <%= f.label :account_type %>
		<div class='input'>
	    <%= f.text_field :account_type %>
		</div>
	  </div>
	<div class='clearfix'>
		<label>Platform</label>
		<div class='input'>
			<button id='eng' class='btn danger'>Rails</button>
			<button id='orc' class='btn primary'>PHP</button>
		</div>
	</div>
	</fieldset>
	  <div class='hide'>
	    <%= f.submit %>
	  </div>
	<% end %>
</div>

<script>
$('#eng').click(function() {
	$("#contact_account_type").val("rails")
	$('#new_contact').submit()
});
$('#orc').click(function() {
	$("#contact_account_type").val("php")
	$('#new_contact').submit()
});
</script>
